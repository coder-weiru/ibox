{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://iplanner-api.ibox.com/todo.schema.json",

  "todo-array": {
    "type": "array",
    "items": {
      "$ref": "#/todo"
    }
  },

  "todo": {
    "title": "Event",
    "description": "An todo in iplanner api",
    "type": "object",
    "properties": {
      "id": {
        "description": "The unique identifier for the todo",
        "type": "string"
      },
      "summary": {
        "description": "The summary of the todo",
        "type": "string",
        "minLength": 1
      },
      "description": {
        "description": "The description of the todo",
        "type": "string"
      },
      "activity": {
        "description": "The associated activity identifier of the todo",
        "type": "string",
        "minLength": 1
      },
      "created": {
        "description": "The timestamp when the todo is created",
        "type": "string",
        "minLength": 1,
        "format": "date-time"
      },
      "updated": {
        "description": "The timestamp when the todo is updated",
        "type": "string",
        "minLength": 1,
        "format": "date-time"
      },
      "start": {
        "description": "The timestamp when the todo starts",
        "type": "string",
        "minLength": 1,
        "format": "date-time"
      },
      "end": {
        "description": "The timestamp when the todo ends",
        "type": "string",
        "minLength": 1,
        "format": "date-time"
      },
      "status": {
        "description": "The status of the todo",
        "type": "string"
      },
      "creator": {
        "$ref": "#/definitions/user"
      },
      "location": {
        "description": "The location where the todo takes place",
        "type": "string"
      },
      "endTimeUnspecified": {
        "description": "Whether the end time has been specified for the todo",
        "type": "boolean"
      },
      "recurrence": {
        "description": "The recurrence of the todo",
        "type": "array",
        "items": {
          "type": "string"
        }
      }
    },
    "required": [
      "summary",
      "activity",
      "created",
      "creator",
      "start"
    ]
  },

  "definitions": {
    "user": {
      "type": "object",
      "properties": {
        "id": {
          "description": "The unique identifier for the user",
          "type": "string",
          "minLength": 1
        },
        "email": {
          "description": "The email for the user",
          "type": "string",
          "format": "email"
        },
        "displayName": {
          "description": "The display name for the user",
          "type": "string",
          "minLength": 1
        },
        "self": {
          "description": "Whether this creator is the user himself",
          "type": "boolean"
        }
      },
      "required": [
        "id",
        "email",
        "displayName",
        "self"
      ]
    }
  }
}