{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://iplanner-api.ibox.com/task.schema.json",

  "task-array": {
    "type": "array",
    "items": {
      "$ref": "#/task"
    }
  },

  "task": {
    "title": "Task",
    "description": "A task activity type in iplanner api",
    "type": "object",
    "allOf": [
      {
        "$ref": "http://iplanner-api.ibox.com/activity.schema.json#/activity"
      },
      {
        "properties": {
          "attributeSet": {
            "$ref": "#/definitions/attribute-set"
          }
        },
        "required": [
          "attributeSet"
        ]
      }
    ]
  },

  "definitions": {
    "attribute-set": {
      "description": "A container to hold a set of attributes",
      "type": "object",
      "properties": {
        "attributes": {
          "description": "The attributes associated with the task",
          "type": "array",
          "items": {
            "anyOf": [
              {
                "$ref": "http://iplanner-api.ibox.com/attributes.schema.json#/tag-attribute"
              },
              {
                "$ref": "http://iplanner-api.ibox.com/attributes.schema.json#/tag-attribute"
              },
              {
                "$ref": "http://iplanner-api.ibox.com/attributes.schema.json#/timeline-attribute"
              }
            ]
          }
        }
      }
    }
  }
}